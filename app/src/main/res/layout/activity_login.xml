<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/gradiant_green_radial"
    android:padding="20dp"
    tools:context=".credential.LoginActivity">


    <LinearLayout
        android:id="@+id/linaerLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <!--<ImageView-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:layout_marginBottom="4dp"-->
        <!--android:src="@drawable/mygas_logo" />-->

    </LinearLayout>

    <TextView
        android:visibility="invisible"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linaerLayout1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/solaiman_lipi"
        android:gravity="center"
        android:text="@string/title_activity_login_lg"
        android:textColor="@android:color/white"
        android:textSize="22sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:src="@drawable/ait_logo" />


            <EditText
                android:id="@+id/userNameInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/iv_logo"
                android:layout_gravity="left"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_border_shape"
                android:fontFamily="@font/solaiman_lipi"
                android:hint="মোবাইল নম্বর"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark" />


            <!--<EditText-->
            <!--android:id="@+id/passwordInput"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="44dp"-->
            <!--android:layout_below="@+id/userNameInput"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:background="@drawable/rounded_border_shape"-->
            <!--android:gravity="center"-->
            <!--android:hint="Password"-->
            <!--android:inputType="textPassword"-->
            <!--android:paddingLeft="16dp"-->
            <!--android:paddingRight="16dp"-->
            <!--android:textColor="@color/colorPrimaryDark"-->
            <!--android:textColorHint="@color/colorPrimaryDark" />-->


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/taxt_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userNameInput"
                android:layout_gravity="left"
                android:layout_marginTop="18dp"

                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimaryDark"

                android:textColorHint="@color/colorPrimaryDark"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userNameInput"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_border_shape"
                    android:hint="পাসওয়ার্ড"
                    android:inputType="textPassword"
                    android:paddingLeft="16dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/button_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/taxt_layout1"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_rounded_angle"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="লগইন"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />


            <!--<TextView-->
            <!--android:id="@+id/txt_forget_password"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/button_verify"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:gravity="right"-->
            <!--android:text="Forget Password?"-->
            <!--android:textAllCaps="false"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="15sp"-->
            <!--android:visibility="gone" />-->

            <TextView
                android:id="@+id/txt_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_verify"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="পাসওয়ার্ড ভুলে গেছেন?"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>